{
  "name": "order",
  "attributes": {
    "user": { "type": "relation", "target": "customer", "relation": "manyToOne" },
    "products": {
      "type": "json",
      "example": [
        { "productId": 1, "variant": { "size": "XL", "color": "Azul" }, "quantity": 2 }
      ]
    },
    "status": { "type": "string", "enum": ["pendiente", "pagado", "enviado", "entregado", "cancelado"] },
    "shippingAddress": { "type": "json" },
    "orderDate": { "type": "date" },
    "total": { "type": "number" },
    "paymentMethod": { "type": "string" },
    "history": { "type": "json" }
  }
}
