{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": { "type": "string", "required": true },
    "description": { "type": "text" },
    "price": { "type": "decimal", "required": true },
    "type": { "type": "enumeration", "enum": ["camiseta", "taza", "pegatina", "otro"] },
    "images": { "type": "media", "multiple": true, "required": false },
    "collection": { "type": "relation", "relation": "manyToOne", "target": "api::collection.collection" },
    "variants": {
      "type": "json",
      "example": [
        { "size": "XL", "color": "Azul", "stock": 10, "sku": "CAM-XL-AZUL" },
        { "size": "L", "color": "Rojo", "stock": 5, "sku": "CAM-L-ROJO" }
      ]
    },
    "stock": { "type": "integer" }
  }
}
